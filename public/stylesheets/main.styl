@import 'nib'

global-reset()

*
  box-sizing border-box

header
  text-align center
  background-color rgba(255, 0, 0, .5)
  padding 50px 10px

  h1
    font-size 2em
    color white

.container
  display flex
  flex-wrap wrap
  width 80%
  padding 20px 10px
  margin 0 auto

  .main-content
    padding 1em
    flex 1
    min-width 60%

  .side-bar
    padding 1em
    flex 1
    min-width: 40%

  footer
    flex 1
    text-align center
    padding 1em
    border-top 2px solid black
